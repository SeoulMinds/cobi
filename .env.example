# ============================================================================
# Root Environment Configuration
# Copy this file to .env and update the values with your actual configuration
# ============================================================================

# ============================================================================
# Docker Image Configuration
# ============================================================================
DOCKER_IMAGE_FRONTEND=your-frontend-image
TAG=latest

# ============================================================================
# Ports Configuration
# ============================================================================
FRONTEND_PORT=5173
BACKEND_PORT=8000

# ============================================================================
# Backend Configuration
# ============================================================================
PYTHONUNBUFFERED=1
FRONTEND_URL=http://localhost:5173

# ============================================================================
# Security
# ============================================================================
JWT_SECRET=<YOUR_JWT_SECRET>
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
SESSION_SECRET=<YOUR_SESSION_SECRET>
SESSION_MAX_AGE=86400000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# MongoDB Configuration
# ============================================================================
MONGO_ADMIN_USER=<YOUR_MONGO_ADMIN_USER>
MONGO_ADMIN_PASS=<YOUR_MONGO_ADMIN_PASS>
MONGODB_PORT=27017
MONGODB_HOST=mongodb
MONGODB_DATABASE=seoulminds_db
MONGODB_URI=mongodb://<YOUR_MONGO_ADMIN_USER>:<YOUR_MONGO_ADMIN_PASS>@mongodb:27017/seoulminds_db?authSource=admin

# ============================================================================
# Mongo Express Configuration
# ============================================================================
MONGO_EXPRESS_USERNAME=<YOUR_MONGO_EXPRESS_USERNAME>
MONGO_EXPRESS_PASSWORD=<YOUR_MONGO_EXPRESS_PASSWORD>
MONGO_EXPRESS_COOKIE_SECRET=<YOUR_MONGO_EXPRESS_COOKIE_SECRET>
MONGO_EXPRESS_SESSION_SECRET=<YOUR_MONGO_EXPRESS_SESSION_SECRET>
MONGO_EXPRESS_PORT=8081

# ============================================================================
# Frontend Configuration
# ============================================================================
VITE_API_BASE_URL=http://localhost:8000
VITE_APP_TITLE=seoulminds
VITE_APP_DESCRIPTION=hackseoulminds website
VITE_API_TIMEOUT=10000
